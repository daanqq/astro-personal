---
import profilePic from '/images/photo.webp';
import Link from './link.astro';
---

<div class="flex flex-col items-center md:items-start justify-between leading-tight p-4 md:p-8">
  <div class="flex justify-center">
    <div class="hidden relative white:md:bg-gray-100 rounded-full border dark:border-zinc-700 border-r-0 rounded-r-none h-full md:block w-32">
      <img class="rounded-full border-2 dark:border-zinc-700" src={profilePic} alt="photo" />
    </div>
    <div
      class="md:border md:border-l-0 pr-6 p-3 pt-1 dark:border-zinc-700 md:rounded-full white:md:bg-gray-100 md:rounded-l-none flex flex-col justify-center">
